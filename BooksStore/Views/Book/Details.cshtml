@model BooksStore.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5">
    <h1 class="mb-5 text-center display-4 text-primary">Book Details</h1>

    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-book"></i> Book Information</h4>
        </div>

        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p class="mb-2"><strong>Title:</strong></p>
                    <p class="text-muted fs-5">@Html.DisplayFor(model => model.Title)</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-2"><strong>Description:</strong></p>
                    <p class="text-muted fs-5">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>

            <!-- Additional Information Row -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <p class="mb-2"><strong>Author:</strong></p>
                    <p class="text-muted fs-5">@((Model.Author?.FullName) ?? "Unknown")</p>
                </div>
                @*      <div class="col-md-6">
                    <p class="mb-2"><strong>Published Date:</strong></p>
                    <p class="text-muted fs-5">@Html.DisplayFor(model => model.PublishedDate)</p>
                    </div>*@
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-outline-info btn-lg" href="@Url.Action("Index")">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
                @*           <a class="btn btn-success btn-lg" href="@Url.Action("Edit", new { id = Model.Id })">
                    <i class="bi bi-pencil-square"></i> Edit Book
                    </a>
                    <a class="btn btn-danger btn-lg" href="@Url.Action("Delete", new { id = Model.Id })">
                    <i class="bi bi-trash"></i> Delete Book
                    </a>*@
            </div>
        </div>
    </div>
</div>
