@model BooksStore.ViewModels.BookAuthorViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center mb-4">Create Book</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.Message
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Title Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter book description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- File Upload Input -->
                    <div class="form-group mb-3">
                        <label asp-for="File" class="control-label">Upload Image</label>
                        <input type="file" name="File" asp-for="File" class="form-control" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>

                    <!-- Author Selection -->
                    <div class="form-group mb-3">
                        <label asp-for="AuthorId" class="control-label">Select Author</label>
                        <select asp-for="AuthorId" class="form-control">
                            <option value="" disabled selected>Select an Author</option>
                            @foreach (var author in Model.Authors)
                            {
                                <option value="@author.Id">@author.FullName</option>
                            }
                        </select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary w-100">Create Book</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>
@section Scripts {
   
    <partial name="_Validation" />


}
