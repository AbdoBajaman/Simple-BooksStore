@model BooksStore.Models.Author

@{
    ViewData["Title"] = "Author Details";

}
@*<head>     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>*@
<div class="container mt-5">
    <h1 class="mb-4 text-center">Author Details</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Author Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Full Name:</strong> @Html.DisplayFor(model => model.FullName)</p>
                </div>
    
            </div>

            <!-- Action Buttons -->
            <div class="mt-4">

                <a class="btn btn-outline-info btn-sm" href="@Url.Action("Index")">Back to List</a>
            </div>
        </div>
    </div>
</div>
