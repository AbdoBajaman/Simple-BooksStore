@model BooksStore.Models.Author

@{
    ViewData["Title"] = "Edit Author";
}

<h1 class="text-center mb-4">Create Author</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Author Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group mb-3">
                            <label for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" type="text" class="form-control" id="FullName" name="FullName" required />
                            <div class="invalid-feedback">
                                Please provide the full name of the author.
                            </div>
                        </div>
                     

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-info">Update Author</button>
                            <a href="@Url.Action("Index", "Author")" class="btn btn-outline-info">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
