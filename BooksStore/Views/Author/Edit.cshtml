@model BooksStore.Models.Author

@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center mb-4">Edit Author</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title">Edit Author Information</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Id Field (Read-only) -->
           @*         <div class="form-group">
                        <label asp-for="Id" class="control-label">Author ID</label>
                        <input asp-for="Id" readonly class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
*@
                    <!-- Full Name Field -->
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Save Button -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary btn-block">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
